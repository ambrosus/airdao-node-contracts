{
  "name": "airdao-node-contracts",
  "version": "0.0.36",
  "main": "./dist/src/index.js",
  "files": ["dist/**/*"],
  "homepage": "https://github.com/ambrosus/airdao-node-contracts",
  "scripts": {
    "npmpublish": "npm run build:js && npm publish",
    "build": "npm run build:sol && npm run build:js",
    "build:js": "rm -rf ./dist/ && tsc -p tsconfig.sdk.json",
    "build:sol": "hardhat compile",
    "test": "REPORT_GAS=true hardhat test",
    "coverage": "COVERAGE=true hardhat coverage",
    "deploy_multisig": "hardhat run ./scripts/deploy_multisig.ts --network test/amb",
    "deploy_finance": "hardhat run ./scripts/deploy_finance.ts --network test/amb",
    "test_script": "hardhat run ./scripts/test.ts --network test/amb"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.1",
    "@openzeppelin/contracts": "^4.1.0",
    "openzeppelin-solidity": "^1.12.0",
    "hardhat": "^2.12.6",
    "dotenv": "^16.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "ethers": "^5.7.2"
  }
}
