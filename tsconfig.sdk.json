{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": [],
    "resolveJsonModule": true
  },
  "include": ["src", "deployments/*.json"],
  "exclude": ["node_modules", "src/dev"]
}
